@model CRUDDEMOCORE.Models.Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<h3>
    Employee Entry
</h3>
<div class="row">
    <div class="col-md-6">

        <form asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Company" class="control-label">
                    <input asp-for="Company" class="form-control" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label">
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>

</div>
<div>
    <a asp-action="Index">Back To Page</a>
</div>
@section script{ 
@{ await Html.RenderPartialAsync("_ValidationScriptPartial");}
}

