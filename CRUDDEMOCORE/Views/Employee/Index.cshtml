@model IEnumerable<CRUDDEMOCORE.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp- action="Create">Create</a>
</p>
<table class="table  table-striped">
    <thead>

        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Gender)

            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Company)

         zz   </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Department)

            </th>
         

        </tr>

    </thead>
    <tbody>
      @foreach(var emp in Model)
            {
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => emp.Name)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => emp.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => emp.Company)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => emp.Department)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@emp.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@emp.Id">Delete</a>
            </td>
           
        </tr>
            }
    </tbody>

</table>